<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="utng.edu.mx.wsmovie.ExamDefWS">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_name_exam"
        android:inputType="text"
        android:hint="@string/name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_description"
        android:inputType="text"
        android:hint="Description"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_minimum"
        android:inputType="number"
        android:hint="Minimum of Corr"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_duration"
        android:inputType="number"
        android:hint="Duration"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_exam_take"
        android:inputType="text"
        android:hint="Exam Take"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_question"
        android:inputType="text"
        android:hint="Question Def"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_margin="@dimen/margin_button"
            android:layout_width="@dimen/whidth_button"
            android:layout_height="wrap_content"
            android:text="@string/guardar"
            android:id="@+id/bt_save"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            />
        <Button
            android:layout_margin="@dimen/margin_button"
            android:layout_width="@dimen/whidth_button"
            android:layout_height="wrap_content"
            android:text="@string/listar"
            android:id="@+id/bt_list"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            />
    </LinearLayout>

</LinearLayout>
